<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corp.app.mogo.activity.CorridaActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_passageiro" />

    <Button
        android:id="@+id/buttonAceitarCorrida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:onClick="aceitarCorrida"
        android:text="Aceitar Corrida"
        android:textSize="17sp" />

    <Button
        android:id="@+id/buttonCancelarCorrida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="?attr/actionModeSplitBackground"
        android:onClick="cancelarCorrida"
        android:text="Cancelar Corrida"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonIniciarCorrida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:onClick="iniciarViagem"
        android:text="Iniciar Viagem"
        android:textSize="17sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonFinalizarCorrida"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:onClick="finalizarCorrida"
        android:text="Finalizar Corrida"
        android:textSize="17sp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabRota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="73dp"
        android:src="@drawable/rota"
        app:fabSize="normal"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>